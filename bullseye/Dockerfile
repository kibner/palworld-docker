###########################################################
# Dockerfile that builds a Palworld dedicated server
###########################################################
FROM cm2network/steamcmd:latest as build_stage
USER root

LABEL maintainer="kibner@gmail.com"

ENV STEAMAPPID 2394010
ENV STEAMAPPDIR "${HOMEDIR}/palworld-server"

COPY etc/entry.sh "${HOMEDIR}/"
COPY etc/PalWorldSettings.ini "${STEAMAPPDIR}/Pal/Saved/Config/LinuxServer/"

RUN set -x \
	# Install, update & upgrade packages
	&& apt-get update \
	&& apt-get install -y --no-install-recommends --no-install-suggests \
# 		wget=1.21-1+deb11u1 \
# 		ca-certificates=20210119 \
# 		lib32z1=1:1.2.11.dfsg-2+deb11u2 \
	&& mkdir -p "${STEAMAPPDIR}" \
	# Add entry script
	&& chmod +x "${HOMEDIR}/entry.sh" \
	&& chown -R "${USER}:${USER}" "${HOMEDIR}/entry.sh" "${STEAMAPPDIR}" \
	# Clean up
	&& rm -rf /var/lib/apt/lists/*

FROM build_stage AS bullseye-base

ENV PALWORLD_SERVER_NAME="New Palworld Server" \
    PALWORLD_SERVER_DESCRIPTION= \
    PALWORLD_ADMIN_PASSWORD= \
    PALWORLD_SERVER_PASSWORD= \
    PALWORLD_PUBLIC_PORT=8211 \
    PALWORLD_PUBLIC_IP= \
    PALWORLD_RCON_ENABLED=False \
    PALWORLD_RCON_PORT=25575 \
    PALWORLD_REGION= \
    PALWORLD_B_USE_AUTH=True \
    PALWORLD_BAN_LIST_URL=https://api.palworldgame.com/api/banlist.txt \
    PALWORLD_COOP_PLAYER_MAX_NUM=4 \
    PALWORLD_SERVER_PLAYER_MAX_NUM=32 \
    PALWORLD_DIFFICULTY=None \
    PALWORLD_DAY_TIME_SPEED_RATE=1.000000 \
    PALWORLD_NIGHT_TIME_SPEED_RATE=1.000000 \
    PALWORLD_EXP_RATE=1.000000 \
    PALWORLD_PAL_CAPTURE_RATE=1.000000 \
    PALWORLD_PAL_SPAWN_NUM_RATE=1.000000 \
    PALWORLD_PAL_DAMAGE_RATE_ATTACK=1.000000 \
    PALWORLD_PAL_DAMAGE_RATE_DEFENSE=1.000000 \
    PALWORLD_PLAYER_DAMAGE_RATE_ATTACK=1.000000 \
    PALWORLD_PLAYER_DAMAGE_RATE_DEFENSE=1.000000 \
    PALWORLD_PLAYER_STOMACH_DECREACE_RATE=1.000000 \
    PALWORLD_PLAYER_STAMINA_DECREACE_RATE=1.000000 \
    PALWORLD_PLAYER_AUTO_HP_REGENE_RATE=1.000000 \
    PALWORLD_PLAYER_AUTO_HP_REGENE_RATE_IN_SLEEP=1.000000 \
    PALWORLD_PAL_STOMACH_DECREACE_RATE=1.000000 \
    PALWORLD_PAL_STAMINA_DECREACE_RATE=1.000000 \
    PALWORLD_PAL_AUTO_HP_REGENE_RATE=1.000000 \
    PALWORLD_PAL_AUTO_HP_REGENE_RATE_IN_SLEEP=1.000000 \
    PALWORLD_BUILD_OBJECT_DAMAGE_RATE=1.000000 \
    PALWORLD_BUILD_OBJECT_DETERIORATION_DAMAGE_RATE=1.000000 \
    PALWORLD_COLLECTION_DROP_RATE=1.000000 \
    PALWORLD_COLLECTION_OBJECT_HP_RATE=1.000000 \
    PALWORLD_COLLECTION_OBJECT_RESPAWN_SPEED_RATE=1.000000 \
    PALWORLD_ENEMY_DROP_ITEM_RATE=1.000000 \
    PALWORLD_DEATH_PENALTY=All \
    PALWORLD_B_ENABLE_PLAYER_TO_PLAYER_DAMAGE=False \
    PALWORLD_B_ENABLE_FRIENDLY_FIRE=False \
    PALWORLD_B_ENABLE_INVADER_ENEMY=True \
    PALWORLD_B_ACTIVE_UNKO=False \
    PALWORLD_B_ENABLE_AIM_ASSIST_PAD=True \
    PALWORLD_B_ENABLE_AIM_ASSIST_KEYBOARD=False \
    PALWORLD_DROP_ITEM_MAX_NUM=3000 \
    PALWORLD_DROP_ITEM_MAX_NUM_UNKO=100 \
    PALWORLD_BASE_CAMP_MAX_NUM=128 \
    PALWORLD_BASE_CAMP_WORKER_MAX_NUM=15 \
    PALWORLD_DROP_ITEM_ALIVE_MAX_HOURS=1.000000 \
    PALWORLD_B_AUTO_RESET_GUILD_NO_ONLINE_PLAYERS=False \
    PALWORLD_AUTO_RESET_GUILD_TIME_NO_ONLINE_PLAYERS=72.000000 \
    PALWORLD_GUILD_PLAYER_MAX_NUM=20 \
    PALWORLD_PAL_EGG_DEFAULT_HATCHING_TIME=72.000000 \
    PALWORLD_WORK_SPEED_RATE=1.000000 \
    PALWORLD_B_IS_MULTIPLAY=False \
    PALWORLD_B_IS_PVP=False \
    PALWORLD_B_CAN_PICKUP_OTHER_GUILD_DEATH_PENALTY_DROP=False \
    PALWORLD_B_ENABLE_NON_LOGIN_PENALTY=True \
    PALWORLD_B_ENABLE_FAST_TRAVEL=True \
    PALWORLD_B_IS_START_LOCATION_SELECT_BY_MAP=True \
    PALWORLD_B_EXIST_PLAYER_AFTER_LOGOUT=False \
    PALWORLD_B_ENABLE_DEFENSE_OTHER_GUILD_PLAYER=False \
    PALWORLD_ADDITIONAL_ARGS=

# Switch to user
USER ${USER}

WORKDIR ${HOMEDIR}

VOLUME ["${STEAMAPPDIR}"]

CMD ["bash", "entry.sh"]

# 8211/udp = game traffic
# 25575/tcp = rcon traffic
EXPOSE 8211/udp \
	25575/tcp
